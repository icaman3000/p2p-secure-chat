# 节点配置
# 将此文件复制为 .env 并根据需要修改

# 本节点监听的端口
NODE_PORT=8082

# 初始连接节点列表(可选)
# 格式: ["ws://192.168.1.100:8082", "ws://192.168.1.101:8082"]
BOOTSTRAP_NODES=[]

# 节点发现
# 是否启用局域网自动发现
ENABLE_LAN_DISCOVERY=true
# 局域网发现端口
DISCOVERY_PORT=8083

# 数据库配置
DB_PATH=data/chat.db

# 网络配置
LOCAL_PORT=0  # 0表示随机端口
EXTERNAL_IP=  # 留空表示自动检测

# STUN服务器配置
STUN_SERVER1=stun.l.google.com
STUN_PORT1=19302
STUN_SERVER2=stun1.l.google.com
STUN_PORT2=19302

# TURN服务器配置（可选）
TURN_SERVER=
TURN_PORT=3478
TURN_USERNAME=
TURN_PASSWORD=

# 中继服务器配置
RELAY_SERVER=ws://your-relay-server.com:8765
RELAY_API_KEY=  # 如果需要认证

# 加密配置
KEY_SIZE=2048  # RSA密钥大小
KEY_PATH=data/keys/  # 密钥存储路径

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=app.log 